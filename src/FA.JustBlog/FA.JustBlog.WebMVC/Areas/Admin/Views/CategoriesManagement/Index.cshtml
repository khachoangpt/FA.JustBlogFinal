@model IEnumerable<Category>

@{
    ViewBag.Title = "Category Management";
}
<h2 class="text-center">Category Management</h2>
<h3 class="text-success time-hide">@TempData["Message"]</h3>
<button class="btn btn-primary mb-3">
    @Html.ActionLink("Create New", "Create", null, new { @class = "text-white text-decoration-none" })
</button>

<table class="table table-bordered table-dark">
    <thead>
        <tr class="text-center">
            <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.UrlSlug)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Description)</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.UrlSlug)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td class="d-flex">
                    <a href="@Url.Action("Edit", "CategoriesManagement", new { id = item.Id})" class="btn btn-primary mr-3">Edit</a>
                    <form action="@Url.Action("Delete", "CategoriesManagement", new{ id = item.Id })" method="post">
                        <button type="submit" onclick="return confirm('Are you sure to delete this category?');" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
