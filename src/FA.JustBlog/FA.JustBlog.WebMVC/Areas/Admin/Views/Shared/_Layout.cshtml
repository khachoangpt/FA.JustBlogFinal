<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Just Blog</title>
    <link rel="icon" href="~/assets/images/bootstrap-solid.svg" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <script src="https://cdn.ckeditor.com/ckeditor5/29.1.0/classic/ckeditor.js"></script>
    <link rel="stylesheet" href="~/Assets/css/style.css" />
    @Styles.Render("~/Assets/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="row">
        <div class="nav-side-menu col-lg-2">
            <div class="brand">
                <a class="navbar-brand text-white" href="~/">
                    <img src="~/assets/images/bootstrap-solid.svg" width="40" height="40" class="d-inline-block" alt="">
                    Just Blog
                </a>
            </div>
            <i class="fa fa-bars fa-2x toggle-btn mr-3" data-toggle="collapse" data-target="#menu-content"></i>
            <div class="menu-list pt-2">
                <ul id="menu-content" class="menu-content collapse flex-column nav ml-2 mr-2">
                    <li class="btn btn-secondary btn-sm btn-block mb-3">
                        @Html.ActionLink("Post Management", "Index", "PostsManagement", new { area = "Admin" }, new { @class = "nav-link text-white" })
                    </li>
                    <li class="btn btn-secondary btn-sm btn-block mb-3">
                        @Html.ActionLink("Category Management", "Index", "CategoriesManagement", new { area = "Admin" }, new { @class = "nav-link text-white" })
                    </li>
                    <li class="btn btn-secondary btn-sm btn-block mb-3">
                        @Html.ActionLink("Tag Management", "Index", "TagsManagement", new { area = "Admin" }, new { @class = "nav-link text-white" })
                    </li>
                    <li class="btn btn-secondary btn-sm btn-block mb-3">
                        @Html.ActionLink("Comment Management", "Index", "CommentsManagement", new { area = "Admin" }, new { @class = "nav-link text-white" })
                    </li>
                    <li class="btn btn-secondary btn-sm btn-block mb-3">
                        @Html.ActionLink("Users Admin", "Index", "UsersAdmin", new { area = "Identity" }, new { @class = "nav-link text-white" })
                    </li>
                    <li class="btn btn-secondary btn-sm btn-block mb-3">
                        @Html.ActionLink("Roles Admin", "Index", "RolesAdmin", new { area = "Identity" }, new { @class = "nav-link text-white" })
                    </li>
                </ul>
            </div>
        </div>

        <div class="col-lg-10">
            @RenderBody()
            <hr />
        </div>
    </div>
    <!-- Footer -->
    <footer>
        @Html.Partial("_FooterPartial")
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Assets/js/scripts.js"></script>
    <script>
        $('.time-hide').delay(3000).hide(0);
    </script>
</body>
</html>